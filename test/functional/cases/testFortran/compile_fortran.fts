# main.s: main.c
# 	\$(CC) -S \$< -o \$@
# main.o: main.s
# 	\$(CC) -c \$< -o \$@
# EOF

cat > ${root_dir}/src/Makefile << EOF
all:
	gfortran ex.f95 -o ex
EOF


cat > "${root_dir}/expected.json" << EOF
[
    {
        "arguments": [
            "gfortran",
            "-c",
            "-o",
            "ex",
            "ex.f95"
        ],
        "directory": "${root_dir}/src",
        "file": "ex.f95"
    }
]
