#!/usr/bin/env bash

# REQUIRES: preload
# RUN: bash %s %T/define_with_nonutf_encode
# RUN: cd %T/define_with_nonutf_encode; %{intercept-build} --fifo --cdb result.json ./run.sh

set -o errexit
set -o nounset
set -o xtrace

# the test creates a subdirectory inside output dir.
#
# ${root_dir}
# +-- run.sh

root_dir=$1
mkdir -p "${root_dir}"

build_file="${root_dir}/run.sh"
cat > ${build_file} << EOF
#!/usr/bin/env bash

set -o nounset
set -o xtrace

echo "©";
true;
EOF
chmod +x ${build_file}
