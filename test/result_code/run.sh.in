#!/bin/sh

set -o nounset
set -o errexit
set -o xtrace

BEAR_EXE="@CMAKE_CURRENT_BINARY_DIR@/../../bear/bear"
BEAR_LIB="@CMAKE_CURRENT_BINARY_DIR@/../../libear/@EAR_LIB_FILE@"

set +o errexit
python ${BEAR_EXE} -l ${BEAR_LIB} false
rc=$?
set -o errexit

if [ 0 = $rc ]; then
  echo "exit code was not captured" && false
fi

python ${BEAR_EXE} -l ${BEAR_LIB} true
