#!/bin/sh

set -o nounset
set -o errexit

BEAR_EXE="@CMAKE_CURRENT_BINARY_DIR@/../../src/bear"
BEAR_LIB="@CMAKE_CURRENT_BINARY_DIR@/../../src/libear@CMAKE_SHARED_LIBRARY_SUFFIX@"
BEAR_CFG="@CMAKE_CURRENT_SOURCE_DIR@/../../src/bear.conf"

set +o errexit
${BEAR_EXE} -c ${BEAR_CFG} -l ${BEAR_LIB} -s ./socket -- false
rc=$?
set -o errexit

if [ 0 = $rc ]; then
  echo "exit code was not captured" && false
fi

${BEAR_EXE} -l ${BEAR_LIB} -s ./socket -- true
